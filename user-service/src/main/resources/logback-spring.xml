<?xml version="1.0" encoding="UTF-8"?>
<configuration>
 <!-- Define the directory where log files will be stored -->
    <property name="LOG_PATH" value="logs"/>

 <!-- File appender: writes logs to a file with daily rotation -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
         <!-- Log file name pattern with date suffix -->
            <fileNamePattern>${LOG_PATH}/app.%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- Keep log files for the last 30 days -->
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
         <!-- Log format: full timestamp, log level, logger name, and message -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

 <!-- Console appender: outputs logs to the terminal -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
         <!-- Log format: short timestamp, log level, logger name, and message -->
            <pattern>%d{HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>